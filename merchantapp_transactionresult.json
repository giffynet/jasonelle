{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Transaction Result",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "{{$global.jason_url}}/transaction.json",
            "method": "get",
            "data": {
              "id": "{{$params.transaction_id}}"
            },
            "head" : {
              "Authorization": "Bearer {{$global.jwt_token}}"
            }
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$util.toast",
            "options": {
              "type": "warning",
              "text": "Unable to  fetch transaction details from server. Please check your internet connection."
            }
          }
        },
        "$foreground": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "title": {
            "type": "image",
            "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#BC845C"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "distribution": "equalspacing"
              },
              "components": [{
                "type": "space",
                "style": {
                "height": "20"
                }
              },{
                "type": "label",
                "text": "Trans ID: {{$jason.transaction_id}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "label",
                "text": "Trans Type: {{$jason.transaction_type}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "label",
                "text": "Date/Time: {{$jason.transaction_datetime}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "label",
                "text": "Amount: {{$jason.transaction_currency}} {{$jason.transaction_amount}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "label",
                "text": "Status: {{$jason.status_text}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Void",
                "style": {
                  "background": "#d9d9d9",
                  "color": "#000000",
                  "height": "80",
                  "size": "24"
                },
                "action": {
                  "type": "$util.alert",
                  "options": {
                    "title": "Confirm to void?",
                    "description": "Please note that you will not be able to undo the void.  Confirm this operation by entering Device PIN to proceed.",
                    "form": [{
                      "name": "device_pin",
                      "placeholder": "Enter Device PIN"
                    }]
                  },
                  "success": {
                    "type": "$network.request",
                    "options": {
                      "url": "{{$global.jason_url}}/transactionvoid.json",
                      "method": "get",
                      "data": {
                        "id": "{{$params.transaction_id}}",
                        "device_pin": "{{$jason.device_pin}}"
                      },
                      "head" : {
                        "Authorization": "Bearer {{$global.jwt_token}}"
                      }
                    },
                    "success": {
                      "type": "$reload"
                    },
                    "error": {
                      "type": "$util.toast",
                      "options": {
                        "type": "warning",
                        "text": "Unable to  fetch transaction details from server. Please check your internet connection."
                      }
                    }
                  },
                  "error": {
                    "type": "$util.toast",
                    "options": {
                      "text": "Void is cancelled"
                    }
                  }
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Back",
                "style": {
                  "background": "#d9d9d9",
                  "color": "#000000",
                  "height": "80",
                  "size": "24"
                },
                "action": {
                  "type": "$back"
                }
              }]
            }]
          }]
        }
      }
    }
  }
}
