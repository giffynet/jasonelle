{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Transaction Result",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "https://ptsv2.com/t/giffynet/post",
            "method": "post",
            "header" : {
              "Authorization" : "Bearer {{$global.jwt_token}}"
            },
            "data": {
              "transaction_id": "{{$params.transaction_id}}"
            }
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$util.toast",
            "options": {
              "type": "warning",
              "text": "Unable to  fetch transaction details from server. Please check your internet connection."
            }
          }
        },
        "$foreground": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#f3f3f3",
          "header": {
            "title": {
            "type": "image",
            "url": "https://giffynet.github.io/jasonelle/giffy_circle_small.png"
            },
            "style": {
              "background": "#BC845C"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "distribution": "equalspacing"
              },
              "components": [{
                "type": "space",
                "style": {
                "height": "20"
                }
              },{
                "type": "label",
                "text": "{{$jason.transaction_id}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "label",
                "text": "{{$jason.transaction_type}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "label",
                "text": "{{$jason.transaction_datetime}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "label",
                "text": "{{$jason.transaction_amount}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "label",
                "text": "{{$jason.result_text}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Back",
                "style": {
                  "background": "#d9d9d9",
                  "color": "#000000",
                  "height": "80",
                  "size": "24"
                },
                "action": {
                  "type": "$back"
                }
              }]
            }]
          }]
        }
      }
    }
  }
}
