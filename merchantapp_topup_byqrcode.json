{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Topup by QR Code",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "templates": {
        "body": {
          "background": {
            "type": "camera",
            "options": {
              "device": "back"
            }
          },
          "header": {
            "title": {
            "type": "image",
            "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#BC845C"
            }
          },
          "layers": [{
            "type": "label",
            "text": "Please SCAN QR Code / Barcode",
            "style": {
              "background": "rgba(0,0,0,0.1)",
              "bottom": "100",
              "left": "20",
              "color": "#FFFFFF",
              "size": "14",
              "align": "center"
            }
          },{
            "type": "label",
            "text": "Topup {{$params.currency}} {{$params.amount}}",
            "style": {
              "background": "rgba(0,0,0,0.1)",
              "top": "100",
              "left": "20",
              "color": "#FFFFFF",
              "size": "18",
              "align": "center"
            }
          }],
          "footer": {
            "tabs": {
              "style": {
                "background": "#BC845C",
                "color:disabled": "#FFFFFF",
                "color": "#84522D"
              },
              "items": [{
                "text": "BY QR CODE",
                "style": {
                  "height": "21"
                },
                "href": {
                  "url": "{{$global.jason_url}}/merchantapp_topup_byqrcode.json",
                  "transition": "replace",
                  "options": {
                    "currency": "{{$params.currency}}",
                    "amount": "{{$params.amount}}"
                  }
                }
              }, {
                "text": "CUST CODE",
                "style": {
                  "height": "21"
                },
                "href": {
                  "url": "{{$global.jason_url}}/merchantapp_topup_bymobileno_custgencode.json",
                  "transition": "replace",
                  "options": {
                    "currency": "{{$params.currency}}",
                    "amount": "{{$params.amount}}"
                  }
                }
              }, {
                "text": "MERCH CODE",
                "style": {
                  "height": "21"
                },
                "href": {
                  "url": "{{$global.jason_url}}/merchantapp_topup_bymobileno_merchgencode.json",
                  "transition": "replace",
                  "options": {
                    "currency": "{{$params.currency}}",
                    "amount": "{{$params.amount}}"
                  }
                }
              }]
            }
          }
        }
      },
      "actions": {
        "$load": {
          "type": "$render"
        },
        "$foreground": {
          "type": "$reload"
        },
        "$show": {
          "type": "$reload"
        },
        "$vision.ready": {
          "type": "$vision.scan"
        },
        "$vision.onscan": {
          "type": "$util.alert",
          "options": {
            "title": "Do you want to continue?",
            "description": "Card Token: {{$jason.content}}"
           },
          "success": {
            "type": "$network.request",
            "options": {
              "url": "{{$global.jason_url}}/transaction.json",
              "method": "get",
              "header" : {
                "Authorization": "Bearer {{$global.jwt_token}}",
                "content_type": "json"
              },
              "data": {
                "currency": "{{$params.currency}}",
                "amount": "{{$params.amount}}",
                "transaction_type": "topup",
                "payload": "{{$jason.content}}"
              }
            },
            "success": {
              "type": "$href",
              "options": {
                "url": "{{$global.jason_url}}/merchantapp_transactionresult.json",
                "transition": "replace",
                "options": {
                  "transaction_id": "{{$jason.transaction_id}}"
                }
              }
            },
            "error": {
              "type": "$util.toast",
              "options": {
                "text": "Transaction is not successful",
                "type": "warning"
              }
            }
          },
          "error": {
            "type": "$timer.start",
            "options": {
              "interval": "1",
              "name": "timer1",
              "action": {
                "type": "$vision.scan"
              }
            }
          }
        }
      }
    }
  }
}
