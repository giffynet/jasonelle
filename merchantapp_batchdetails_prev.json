{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Batch Details",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "{{$global.jason_url}}/transactionlist_prev.json",
            "method": "get",
            "header" : {
              "Authorization" : "Bearer {{$global.jwt_token}}"
            }
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$util.toast",
            "options": {
              "type": "warning",
              "text": "Unable to  fetch transaction list from server. Please check your internet connection."
            }
          }
        },
        "$foreground": {
          "type": "$reload"
        },
        "$pull": {
          "type": "$reload"
        },
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "title": {
              "type": "image",
              "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#e98437"
            },
            "search": {
              "name": "query_text",
              "placeholder": "Enter Keywords",
              "style": {
                "background": "#f3f3f3"
              }
            }
          },
          "sections": [{
            "header": {
              "type": "label",
              "text": "Transaction History",
              "style": {
                "size": "18"
              }
            },
            "items": {
              "{{#each $jason.transactions}}": {
                "type": "vertical",
                "style": {
                  "align": "center",
                  "padding": "20",
                  "distribution": "equalspacing"
                },
                "components": [{
                  "type": "label",
                  "text": "{{transaction_datetime}} / {{consumer_name}}",
                  "style": {
                    "size": "12"
                  }
                },{
                  "type": "label",
                  "text": "{{transaction_type}} {{transaction_currency}} {{transaction_amount}} [{{status_text}}]",
                  "style": {
                    "size": "18"
                  },
                  "href": {
                    "url": "{{$global.jason_url}}/merchantapp_transactionresult.json",
                    "transition": "push",
                    "options": {
                      "transaction_id": "{{transaction_id}}"
                    }
                  }
                },{
                  "type": "label",
                  "text": "{{programme_name}}",
                  "style": {
                    "size": "12"
                  }
                }]
              }
            }
          }]
        }
      }
    }
  }
}
