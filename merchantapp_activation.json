{
    "$jason": {
        "head": {
            "title": "Giffy Merchant",
            "description": "This app enable merchant to  accept digital gift card powered by Giffy"
        },
        "body": {
            "header": {
                "title": "Giffy Merchant"
            },
            "sections": [{
                "items": [{
                    "type": "vertical",
                    "style": {
                        "align": "center",
                        "padding": "30"
                    },
                    "components": [{
                        "type": "image",
                        "url": "https://giffynet.github.io/jasonelle/giffy_circle.png",
                        "style": {
                            "width": "100",
                            "height": "100",
                            "corner_radius": "25"
                        }
                    },{
                        "type": "textfield",
                        "name": "nonce",
                        "value": "",
                        "placeholder": "Enter Nonce Value"
                    },{
                        "type": "textfield",
                        "name": "activation_code",
                        "value": "",
                        "placeholder": "Enter Activation Code"
                    },{
                        "type": "button",
                        "text": "Activate",
                        "style": {
                            "background": "#00ff00",
                            "color": "#ffffff",
                            "border_width": "25"
                        }
                    }]
                }]
            }]
        }
    }
}
