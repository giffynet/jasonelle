{
    "$jason": {
        "head": {
            "title": "Giffy Merchant",
            "description": "This app enable merchant to  accept digital gift card powered by Giffy"
         },

                "body": {
                    "background": "#f3f3f3",
                    "header": {
                        "title": "Giffy Merchant",
                        "style": {
                            "size": "18"
                        }
                    },
                    "sections": [{
                        "items": [{
                            "type": "vertical",
                            "style": {
                                "align": "center",
                                "padding": "30"
                            },
                            "components": [{
                                "type": "image",
                                "url": "https://giffynet.github.io/jasonelle/giffy_circle.png",
                                "style": {
                                    "width": "100",
                                    "height": "100"
                                }
                            },{
                                "type": "space",
                                "style": {
                                    "height": "25"
                                }
                            },{
                                "type": "textfield",
                                "name": "nonce",
                                "value": "",
                                "placeholder": "Enter Nonce Value"
                            },{
                                "type": "textfield",
                                "name": "activation_code",
                                "value": "",
                                "placeholder": "Enter Activation Code"
                            },{
                                "type": "space",
                                "style": {
                                    "height": "25"
                                }
                            },{
                                "type": "button",
                                "text": "Activate",
                                "style": {
                                    "background": "#d9d9d9",
                                    "color": "#000000",
                                    "height": "50",
                                    "size": "18"
                                },
                                "action" : {
                                    "type": "$util.alert",
                                    "options": {
                                        "title": "Basic Alert",
                                        "description": "{{'The  value of variable #bar# is #'+$get.bar+'#'}}"
                                    },
                                    "success": {
                                        "type": "$util.alert",
                                        "options": {
                                            "title": "Basic Alert",
                                            "description": "successful lah"
                                        }
                                    },
                                    "error": {
                                        "type": "$util.alert",
                                        "options": {
                                            "title": "Basic Alert",
                                            "description": "error leh"
                                        }
                                    }
                                }
                            }]
                        }]
                    }]
                }
            }

    }
}
