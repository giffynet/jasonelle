{
    "$jason": {
        "head": {
            "title": "Giffy Merchant",
            "description": "This app enable merchant to  accept digital gift card powered by Giffy",
            "actions": {
                "$load": {
                    "type": "$network.request",
                    "options": {
                        "url": "https://ptsv2.com/t/giffynet/post",
                        "method": "get",
                        "header" : {
                            "Authorization" : "Bearer {{$global.jwt_token}}"
                        }
                    }
                },
                "success": {
                    "type": "$render"
                },
                "error": {
                    "type": "$render"
                }
            }
        },
        "body": {
            "background": "#f3f3f3",
            "header": {
                "title": "Giffy Merchant",
                "style": {
                    "size": "18"
                }
            },
            "sections": [{
                "items": [{
                    "type": "vertical",
                    "style": {
                        "align": "center",
                        "padding": "30"
                    },
                    "components": [{
                        "type": "image",
                        "url": "https://giffynet.github.io/jasonelle/giffy_circle.png",
                        "style": {
                            "width": "100",
                            "height": "100",
                        }
                    },{
                        "type": "space",
                        "style": {
                            "height": "25"
                        }
                    },{
                        "type": "textfield",
                        "name": "nonce",
                        "value": "",
                        "placeholder": "Enter Nonce Value"
                    },{
                        "type": "textfield",
                        "name": "activation_code",
                        "value": "",
                        "placeholder": "Enter Activation Code"
                    },{
                        "type": "space",
                        "style": {
                            "height": "25"
                        }
                    },{
                        "type": "button",
                        "text": "Activate",
                        "style": {
                            "background": "#d9d9d9",
                            "color": "#000000",
                            "height": "50",
                            "size": "18"
                        },
                        "action" : {
                            "type": "$network.request",
                            "options": {
                                "url": "https://ptsv2.com/t/giffynet/post",
                                "method": "post",
                                "header" : {
                                    "content_type": "json"
                                },
                                "data": {
                                    "nonce": "{{$get.nonce}}",
                                    "activation_code": "{{$get.activation_code}}"
                                }
                            },
                            "success": {
                                "type": "$global.set",
                                "options": {
                                    "jwt_token": "{{$jason.jwt_token}}"
                                }
                            },
                            "success": {
                                "type": "$util.alert",
                                "options": {
                                    "title": "Basic Alert",
                                    "description": "successful lah. jason: {{$jason}} jwt: {{$global.jwt_token}}"
                                }
                            },
                            "error": {
                                "type": "$global.reset",
                                "items": ["jwt_token"]
                            },
                            "error": {
                                "type": "$util.alert",
                                "options": {
                                    "title": "Basic Alert",
                                    "description": "error leh. jwt: {{$global.jwt_token}}"
                                }
                            }
                        }
                    }]
                }]
            }]
        }
    }
}
