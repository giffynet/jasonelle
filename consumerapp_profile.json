{
  "$jason": {
    "head": {
      "title": "Giffy - Consumer Profile",
      "description": "This app enable consumer to buy and use digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "https://giffynet.github.io/jasonelle/consumerprofile.json",
            "method": "get",
            "header" : {
              "Authorization" : "Bearer {{$global.jwt_token}}"
            }
          },
          "success": {
            "type": "$set",
            "options": {
              "c_name": "{{$jason.consumer_name}}",
              "c_gender": "{{$jason.consumer_gender}}"
            },
            "success": {
              "type": "$render"
            }
          },
          "error": {
            "type": "$util.toast",
            "options": {
              "type": "warning",
              "text": "Unable to fetch data from server. Please check your internet connection."
            }
          }
        },
        "$foreground": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#f3f3f3",
          "header": {
            "title": {
              "type": "image",
              "url": "https://giffynet.github.io/jasonelle/giffy_circle_small.png"
            },
            "style": {
              "background": "#BC845C"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "left",
                "padding": "20",
                "distribution": "equalspacing"
              },
              "components": [{
                "type": "label",
                "text": "We value your privacy and this section is absolutely optional. However, if you wish to receive promotions that relevant to your profile, please update the profile section below as much as feels comfortable. Thank you very much.",
                "style": {
                  "size": "12"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "label",
                "text": "*Tap on the label that you would like to change",
                "style": {
                  "size": "12"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Name",
                "style": {
                  "size": "18"
                },
                "action": {
                  "type": "$util.alert",
                  "options": {
                    "title": "Name",
                    "description": "Please enter your name",
                    "form": [{
                      "name": "cs_name",
                      "value": "{{$get.c_name}}",
                      "placeholder": "Enter Your Name"
                    }]
                  },
                  "success": {
                    "type": "$set",
                    "options": {
                      "c_name": "{{$jason.cs_name}}"
                    },
                    "success": {
                      "type": "$render"
                    }
                  }
                }
              },{
                "type": "label",
                "text": "{{$get.c_name}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Gender",
                "style": {
                  "size": "18"
                },
                "action": {
                  "type": "$util.picker",
                  "options": {
                    "title": "Gender",
                    "items": [{
                      "text": "Male",
                      "action": {
                        "type": "$set",
                        "options": {
                          "c_gender": "Male"
                        }
                      },
                      "success": {
                        "type": "$render"
                      }
                    },{
                      "text": "Female",
                      "action": {
                        "type": "$set",
                        "options": {
                          "c_gender": "Female"
                        }
                      },
                      "success": {
                        "type": "$render"
                      }
                    }]
                  }
                }
              },{
                "type": "label",
                "text": "{{$get.c_gender}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Update",
                "style": {
                  "background": "#d9d9d9",
                  "color": "#000000",
                  "height": "80",
                  "size": "24"
                },
                "action": {
                  "type": "$util.toast",
                  "options": {
                    "type": "success",
                    "text": "{{$get.c_name}} {{$get.c_gender}}"
                  }
                }
              }]
            }]
          }]
        }
      }
    }
  }
}
