{
  "$jason": {
    "head": {
      "title": "Giffy Merchant -  Index",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy"
    },
    "body": {
      "background": "#f3f3f3",
      "header": {
        "title": {
          "type": "image",
          "url": "https://giffynet.github.io/jasonelle/giffy_circle_small.png"
        },
        "style": {
          "background": "#BC845C"
        },
        "menu": {
          "text": "MORE",
          "style": {
            "color": "#FFFFFF"
          },
          "action": {
            "type": "$util.picker",
            "title": "Batch Menu",
            "options": {
              "items": [{
                "text": "Batch Details"
              },{
                "text": "Batch Total"
              }]
            }
          }
        }
      },
      "sections": [{
        "items": [{
          "type": "vertical",
          "style": {
            "align": "center",
            "padding": "20",
            "border": "none"
          },
          "components": [{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "button",
            "text": "Sales",
            "style": {
              "background": "#d9d9d9",
              "color": "#000000",
              "height": "80",
              "size": "24"
            },
            "action": {
              "type": "$href",
              "options": {
                "url": "https://giffynet.github.io/jasonelle/merchantapp_sales.json",
                "transition": "push"
              }
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "button",
            "text": "Topup",
            "style": {
              "background": "#d9d9d9",
              "color": "#000000",
              "height": "80",
              "size": "24"
            },
            "action": {
              "type": "$util.alert",
              "options": {
                "title": "Topup",
                "description": "Please enter amount to add to the gift card balance",
                "form": [{
                  "name": "topup_amount",
                  "placeholder": "e.g. 100",
                }]
              }
            },
            "success": {
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "button",
            "text": "Redeem",
            "style": {
              "background": "#d9d9d9",
              "color": "#000000",
              "height": "80",
              "size": "24"
            },
            "action": {
              "type": "$util.alert",
              "options": {
                "title": "Redeem",
                "description": "Please enter amount to deduct from the gift card balance",
                "form": [{
                  "name": "redeem_amount",
                  "placeholder": "e.g. 100",
                }]
              }
            },
            "success": {
            }
          }]
        }]
      }]
    }
  }
}
