{
  "$jason": {
    "head": {
      "title": "Giffy Merchant -  Index",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "{{$global.jason_url}}/transactionlist.json",
            "method": "get",
            "header" : {
              "Authorization" : "Bearer {{$global.jwt_token}}"
            }
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$util.toast",
            "options": {
              "type": "warning",
              "text": "Unable to fetch transactions list from server. Please check your internet connection."
            }
          }
        },
        "$foreground": {
          "type": "$reload"
        },
        "$pull": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "title": {
              "type": "image",
              "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#e98437"
            },
            "menu": {
              "text": "MORE",
              "style": {
                "color": "#FFFFFF"
              },
              "action": {
                "type": "$util.picker",
                "options": {
                  "items": [{
                    "text": "My Profile",
                    "action": {
                      "type": "$href",
                      "options": {
                        "url": "{{$global.jason_url}}/consumerapp_profile.json",
                        "transition": "push"
                      }
                    }
                  },{
                    "text": "My Inbox",
                    "action": {
                      "type": "$href",
                      "options": {
                        "url": "{{$global.jason_url}}/consumerapp_inbox.json",
                        "transition": "push"
                      }
                    }
                  }]
                }
              }
            }
          },
          "layers": [{
            "type": "image",
            "url": "{{$global.jason_url}}/addcard.png",
            "style": {
              "bottom": "20",
              "right": "20",
              "width": "60"
            },
            "action": {
              "type": "$util.picker",
              "options": {
                "items": [
                  {
                    "text": "Buy Gift Card",
                    "action": {
                      "type": "$href",
                      "options": {
                        "url": "{{$global.jason_url}}/consumerapp_addcard_byqrcode.json",
                        "transition": "push"
                      }
                    }
                  },{
                    "text": "Enter Promo Code",
                    "action": {
                      "type": "$href",
                      "options": {
                        "url": "{{$global.jason_url}}/consumerapp_addcard_bypromocode.json",
                        "transition": "push"
                      }
                    }
                  }
                ]
              }
            }
          }],
          "sections": [{
            "items": [{
              "type": "vertical",
              "components": [{
                "type": "label",
                "text": "Current Batch",
                "style": {
                  "size": "20",
                  "color": "#e67620"
                }
              }]
            }]
          },{
            "items": {
              "{{#each $jason.transactions}}": {
                "type": "vertical",
                "style": {
                  "align": "center",
                  "padding": "20",
                  "distribution": "equalspacing"
                },
                "components": [{
                  "type": "label",
                  "text": "{{transaction_datetime}} / {{consumer_name}}",
                  "style": {
                    "size": "12"
                  }
                },{
                  "type": "label",
                  "text": "{{transaction_type}} {{transaction_currency}} {{transaction_amount}} [{{status_text}}]",
                  "style": {
                    "size": "18"
                  },
                  "href": {
                    "url": "{{$global.jason_url}}/merchantapp_transactionresult.json",
                    "transition": "push",
                    "options": {
                      "transaction_id": "{{transaction_id}}"
                    }
                  }
                },{
                  "type": "label",
                  "text": "{{programme_name}}",
                  "style": {
                    "size": "12"
                  }
                }]
              }
            }
          }]
        }
      }
    }
  }
}
