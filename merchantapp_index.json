{
  "$jason": {
    "head": {
      "title": "Giffy Merchant -  Index",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$global.set",
          "options": {
            "jwt_token": "MySessionToken",
            "default_currency": "SGD",
            "default_dialingcode": "",
            "jason_url": "https://giffynet.github.io/jasonelle"
          },
          "success": {
            "type": "$render"
          }
        }
      }
    },
    "body": {
      "background": "#ffffff",
      "header": {
        "title": {
          "type": "image",
          "url": "https://giffynet.github.io/jasonelle/giffy_circle_small.png"
        },
        "style": {
          "background": "#BC845C"
        },
        "menu": {
          "text": "MORE",
          "style": {
            "color": "#FFFFFF"
          },
          "action": {
            "type": "$util.picker",
            "title": "Batch Menu",
            "options": {
              "items": [{
                "text": "Batch Details",
                "action": {
                  "type": "$href",
                  "options": {
                    "url": "{{$global.jason_url}}/merchantapp_batchdetails.json",
                    "transition": "push"
                  }
                },
                "success": {
                  "type": "$render"
                },
                "error": {
                }
              },{
                "text": "Batch Total",
                "action": {
                  "type": "$href",
                  "options": {
                    "url": "{{$global.jason_url}}/merchantapp_batchsummary.json",
                    "transition": "push"
                  }
                },
                "success": {
                  "type": "$render"
                },
                "error": {
                }
              }]
            }
          }
        }
      },
      "sections": [{
        "items": [{
          "type": "vertical",
          "style": {
            "align": "center",
            "padding": "20",
            "border": "none"
          },
          "components": [{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "button",
            "text": "Sales",
            "style": {
              "background": "#d9d9d9",
              "color": "#000000",
              "height": "80",
              "size": "24"
            },
            "href": {
              "url": "{{$global.jason_url}}/merchantapp_sales.json",
              "transition": "push"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "button",
            "text": "Topup",
            "style": {
              "background": "#d9d9d9",
              "color": "#000000",
              "height": "80",
              "size": "24"
            },
            "href": {
              "url": "{{$global.jason_url}}/merchantapp_getamount.json",
              "transition": "push",
              "options": {
                "activity": "Topup",
                "currency": "{{$global.default_currency}}",
                "next_url": "{{$global.jason_url}}/merchantapp_topup_byqrcode.json"
              }
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "button",
            "text": "Redeem",
            "style": {
              "background": "#d9d9d9",
              "color": "#000000",
              "height": "80",
              "size": "24"
            },
            "href": {
              "url": "{{$global.jason_url}}/merchantapp_getamount.json",
              "transition": "push",
              "options": {
                "activity": "Redeem",
                "currency": "{{$global.default_currency}}",
                "next_url": "{{$global.jason_url}}/merchantapp_redeem_byqrcode.json"
              }
            }
          }]
        }]
      }]
    }
  }
}
