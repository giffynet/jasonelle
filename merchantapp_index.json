{
  "$jason": {
    "head": {
      "title": "Giffy Merchant -  Index",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy"
    },
    "body": {
      "background": "#f3f3f3",
      "header": {
        "title": {
          "type": "image",
          "url": "https://giffynet.github.io/jasonelle/giffy_circle.png"
        },
        "style": {
          "background": "#BC845C"
        },
        "menu": {
          "image": "https://giffynet.github.io/jasonelle/hamburger-menu.png",
          "action": {
            "type": "$util.picker",
            "title": "Menu",
            "options": {
              "items": [{
                "text": "View Transactions"
              },{
                "text": "Batch Total"
              }]
            }
          }
        }
      },
      "sections": [{
        "items": [{
          "type": "vertical",
          "style": {
            "align": "center",
            "padding": "30",
            "border": "none"
          },
          "components": [{
            "type": "space",
            "style": {
              "height": "10"
            }
          },{
            "type": "button",
            "text": "Sales",
            "style": {
              "background": "#d9d9d9",
              "color": "#000000",
              "height": "80",
              "size": "24"
            }
          },{
            "type": "space",
            "style": {
              "height": "10"
            }
          },{
            "type": "button",
            "text": "Topup",
            "style": {
              "background": "#d9d9d9",
              "color": "#000000",
              "height": "80",
              "size": "24"
            }
          },{
            "type": "space",
            "style": {
              "height": "10"
            }
          },{
            "type": "button",
            "text": "Redeem",
            "style": {
              "background": "#d9d9d9",
              "color": "#000000",
              "height": "80",
              "size": "24"
            }
          }]
        }]
      }]
    }
  }
}
