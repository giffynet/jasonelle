{
  "$jason": {
    "head": {
      "title": "Giffy - By Merchant PIN Code",
      "description": "This app enable consumer to buy and use digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$set",
          "options": {
            "dynamic_pin2": "",
            "mobile_number2": "",
            "expiry2": "",
            "expiry": ""
          },
          "success": {
            "type": "$render"
          }
        },
        "$foreground": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "title": {
            "type": "image",
            "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#e98437"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "distribution": "equalspacing"
              },
              "components": [{
                "type": "space",
                "style": {
                "height": "20"
                }
              },{
                "type": "label",
                "text": "Enter Merchant's Dynamic PIN",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "textfield",
                "name": "dynamic_pin1",
                "keyboard": "number",
                "style": {
                  "size": "48"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Submit",
                "style": {
                  "background": "#379ce9",
                  "color": "#ffffff",
                  "corner_radius": "10",
                  "height": "50",
                  "size": "20"
                },
                "action": {
                  "type": "$network.request",
                  "options": {
                    "url": "{{$global.jason_url}}/transaction.json",
                    "method": "get",
                    "header" : {
                      "Authorization": "Bearer {{$global.jwt_token}}",
                      "content_type": "json"
                    },
                    "data": {
                      "card_id": "{{params.card_id}}",
                      "merchant_dynamic_pin": "{{$get.dynamic_pin1}}"
                    }
                  },
                  "success": {
                    "type": "$util.alert",
                    "options": {
                      "title": "{{$jason.transaction_type}}",
                      "description": "Please confirm [{{$jason.transaction_type}}] of {{$jason.transaction_currency}} {{$jason.transaction_amount}}"
                    },
                    "success": {
                      "type": "$network.request",
                      "options": {
                        "url": "{{$global.jason_url}}/transaction.json",
                        "method": "get",
                        "header" : {
                          "Authorization": "Bearer {{$global.jwt_token}}",
                          "content_type": "json"
                        },
                        "data": {
                          "card_id": "{{params.card_id}}",
                          "merchant_dynamic_pin": "{{$get.dynamic_pin1}}"
                        }
                      },
                      "success": {
                        "type": "$href",
                        "options": {
                          "url": "{{$global.jason_url}}/consumerapp_transactionresult.json",
                          "transition": "replace",
                          "options": {
                            "transaction_id": "{{$jason.transaction_id}}"
                          }
                        }
                      },
                      "error": {
                        "type": "$util.toast",
                        "options": {
                          "text": "Transaction is not successful",
                          "type": "warning"
                        }
                      }
                    }
                  },
                  "error": {
                    "type": "$util.toast",
                    "options": {
                      "text": "Transaction is not successful",
                      "type": "warning"
                    }
                  }
                }
              }]
            }]
          }]
        }
      }
    }
  }
}
