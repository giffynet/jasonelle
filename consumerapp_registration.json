{
  "$jason": {
    "head": {
      "title": "Giffy Consumer - Registration",
      "description": "This app enable consumer to buy and use digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$global.set",
          "options": {
            "jason_url": "https://giffynet.github.io/jasonelle"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {

    "body": {
      "background": "#ffffff",
      "sections": [{
        "items": [{
          "type": "vertical",
          "style": {
            "align": "center",
            "padding": "20",
            "border": "none"
          },
          "components": [{
            "type": "image",
            "url": "{{$global.jason_url}}/giffy_circle_small.png",
            "style": {
              "width": "100",
              "height": "100"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "label",
            "text": "Enter Customer's Mobile Number",
            "style": {
              "size": "18"
            }
          },{
            "type": "label",
            "text": "Please include country and area code",
            "style": {
              "size": "12"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "textfield",
            "name": "mobile_number",
            "placeholder": "e.g. 6221811198111",
            "keyboard": "phone",
            "style": {
              "size": "18"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "label",
            "text": "By signing up, you agree to our Terms of Services and Privacy Policy."
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "horizontal",
            "components": [{
              "type": "button",
              "text": "Term of Services",
              "style": {
                "align": "center"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "{{$global.jason_url}}/consumerapp_termofservices.json",
                  "transition": "modal"
                }
              }
            },{
              "type": "button",
              "text": "Privacy Policy",
              "style": {
                "align": "center"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "{{$global.jason_url}}/consumerapp_privacypolicy.json",
                  "transition": "modal"
                }
              }
            }]
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "button",
            "text": "Create Account",
            "style": {
              "background": "#379ce9",
              "color": "#ffffff",
              "corner_radius": "10",
              "height": "50",
              "size": "20"
            },
            "action" : {
              "type": "$network.request",
              "options": {
                "url": "{{$global.jason_url}}/getotp.json",
                "method": "get",
                "header" : {
                  "content_type": "json"
                },
                "data": {
                  "mobile_no": "{{$get.mobile_no}}"
                }
              },
              "success": {
                "type": "$href",
                "options": {
                  "url": "{{$global.jason_url}}/consumerapp_otp.json",
                  "transition": "replace"
                }
              },
              "error": {
                "type": "$util.toast",
                "options": {
                  "text": "Failed to create account. Please try again."
                }
              }
            }
          }]
        }]
      }]
    }

      }
    }
  }
}
