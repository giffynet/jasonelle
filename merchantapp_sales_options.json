{
  "$jason": {
    "head": {
      "title": "Giffy Merchant -  Sales Options",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$render"
        },
        "$foreground": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "title": {
              "type": "image",
              "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#e98437"
            },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "border": "none"
              },
              "components": [{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Scan QR / Barcode",
                "style": {
                  "background": "#379ce9",
                  "color": "#ffffff",
                  "height": "80",
                  "size": "24"
                },
                "href": {
                  "url": "{{$global.jason_url}}/merchantapp_sales_byqrcode.json",
                  "transition": "replace",
                  "options": {
                    "amount": "{{$params.amount}}",
                    "programme_id": "{{$params.programme_id}}",
                    "programme_name": "{{$params.programme_name}}",
                    "currency": "{{$params.currency}}"
                  }
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Enter Mobile Number",
                "style": {
                  "background": "#379ce9",
                  "color": "#ffffff",
                  "height": "80",
                  "size": "24"
                },
                "href": {
                  "url": "{{$global.jason_url}}/merchantapp_sales_bymobileno.json",
                  "transition": "replace",
                  "options": {
                    "amount": "{{$params.amount}}",
                    "programme_id": "{{$params.programme_id}}",
                    "programme_name": "{{$params.programme_name}}",
                    "currency": "{{$params.currency}}"
                  }
                }
              }]
            }]
          }]
        }
      }
    }
  }
}
