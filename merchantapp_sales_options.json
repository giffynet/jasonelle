{
  "$jason": {
    "head": {
      "title": "Giffy Merchant -  Index",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$render"
        },
        "$foreground": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "title": {
              "type": "image",
              "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#e98437"
            },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "border": "none"
              },
              "components": [{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Scan QR / Barcode",
                "style": {
                  "background": "#379ce9",
                  "color": "#ffffff",
                  "height": "80",
                  "size": "24"
                },
                "href": {
                  "url": "{{$global.jason_url}}/merchantapp_sales_byqrcode.json",
                  "transition": "push"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "PIN Code",
                "style": {
                  "background": "#379ce9",
                  "color": "#ffffff",
                  "height": "80",
                  "size": "24"
                },
                "href": {
                  "url": "{{$global.jason_url}}/merchantapp_getamount.json",
                  "transition": "push",
                  "options": {
                    "activity": "Topup",
                    "currency": "{{$global.default_currency}}",
                    "next_url": "{{$global.jason_url}}/merchantapp_topup_byqrcode.json"
                  }
                }
              }]
            }]
          }]
        }
      }
    }
  }
}
