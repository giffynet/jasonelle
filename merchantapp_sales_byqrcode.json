{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Sales by QR Code",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "templates": {
        "body": {
          "background": {
            "type": "camera",
            "options": {
              "device": "back"
            }
          },
          "header": {
            "title": {
            "type": "image",
            "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#BC845C"
            }
          },
          "layers": [{
            "type": "label",
            "text": "Please SCAN QR Code / Barcode",
            "style": {
              "background": "rgba(0,0,0,0.1)",
              "bottom": "100",
              "left": "20",
              "color": "#FFFFFF",
              "size": "14",
              "align": "center"
            }
          },{
            "type": "label",
            "text": "{{$params.programme_name}}",
            "style": {
              "background": "rgba(0,0,0,0.1)",
              "top": "100",
              "left": "20",
              "color": "#FFFFFF",
              "size": "18",
              "align": "center"
            }
          },{
            "type": "label",
            "text": "{{$params.currency}} {{$params.amount}}",
            "style": {
              "background": "rgba(0,0,0,0.1)",
              "top": "125",
              "left": "20",
              "color": "#FFFFFF",
              "size": "18",
              "align": "center"
            }
          }]
        }
      },
      "actions": {
        "$load": {
          "type": "$render"
        },
        "$foreground": {
          "type": "$reload"
        },
        "$show": {
          "type": "$reload"
        },
        "$vision.ready": {
          "type": "$vision.scan"
        },
        "$vision.onscan": {
          "type": "$util.alert",
          "options": {
            "title": "Do you want to continue?",
            "description": "Scan Content: {{$jason.content}}"
           },
          "success": {
            "type": "$network.request",
            "options": {
              "url": "{{$global.jason_url}}/transaction.json",
              "method": "get",
              "header" : {
                "Authorization": "Bearer {{$global.jwt_token}}",
                "content_type": "json"
              },
              "data": {
                "amount": "{{$params.amount}}",
                "programme_id": "{{$params.programme_id}}",
                "currency": "{{$params.currency}}",
                "transaction_type": "sales",
                "payload": "{{$jason.content}}"
              }
            },
            "success": {
              "type": "$href",
              "options": {
                "url": "{{$global.jason_url}}/merchantapp_transactionresult.json",
                "transition": "replace",
                "options": {
                  "transaction_id": "{{$jason.transaction_id}}"
                }
              }
            },
            "error": {
              "type": "$util.toast",
              "options": {
                "text": "Transaction is not successful",
                "type": "warning"
              }
            }
          },
          "error": {
            "type": "$timer.start",
            "options": {
              "interval": "1",
              "name": "timer1",
              "action": {
                "type": "$vision.scan"
              }
            }
          }
        }
      }
    }
  }
}
