{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Sales by QR Code",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "templates": {
        "body": {
          "background": {
            "type": "camera",
            "options": {
              "device": "back"
            }
          },
          "header": {
            "title": {
            "type": "image",
            "url": "https://giffynet.github.io/jasonelle/giffy_circle_small.png"
            },
            "style": {
              "background": "#BC845C"
            }
          },
          "layers": [{
            "type": "label",
            "text": "Please SCAN QR Code / Barcode",
            "style": {
              "top": "100",
              "left": "50%-110",
              "color": "#FFFFFF",
              "size": "14",
              "padding": "5",
              "align": "center"
            }
          }],
          "footer": {
            "tabs": {
              "style": {
                "background": "rgba(255,255,255,0.8)",
                "color:disabled": "#cecece",
                "color": "#009efa"
              },
              "items": [{
                "text": "BY MOBILE NO",
                "style": {
                  "height": "21"
                },
                "url": "https://giffynet.github.io/jasonelle/merchantapp_sales_bymobileno.json"
              }, {
                "text": "BY QR CODE",
                "style": {
                  "height": "21"
                },
                "url": "https://giffynet.github.io/jasonelle/merchantapp_sales_byqrcode.json"
              }]
            }
          }
        }
      },
      "actions": {
        "$load": {
          "type": "$render"
        },
        "$foreground": {
          "type": "$reload"
        },
        "$vision.ready": {
          "type": "$vision.scan"
        },
        "$vision.onscan": {
          "type": "$util.alert",
          "options": {
            "title": "Scanned content",
            "description": "Type: {{$jason.type}}, Content: {{$jason.content}}, Sales Amount: {{$global.sales_amount}}, Programme_ID: {{$global.programme_id}}"
           },
          "success": {
          },
          "error": {
            "type": "$timer.start",
            "options": {
              "interval": "1",
              "name": "timer1",
              "action": {
                "type": "$vision.scan"
              }
            }
          }
        }
      }
    }
  }
}
