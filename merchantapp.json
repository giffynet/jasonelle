{
  "$jason": {
    "head": {
      "title": "Giffy Merchant",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$global.set",
          "options": {
            "jason_url": "https://giffynet.github.io/jasonelle"
          },
          "success": {
            "type": "$network.request",
            "options": {
              "url": "{{$global.jason_url}}/verifymerchanttoken.json",
              "method": "get",
              "header" : {
                "Authorization" : "Bearer {{$global.jwt_token}}",
                "content_type": "json"
              },
              "data": {
                "dummy": "test"
              }
            },
            "success": {
              "type": "$global.set",
              "options": {
                "jwt_token": "{{$jason.jwt_token}}",
                "default_currency": "{{$jason.default_currency}}",
                "default_dialingcode": "{{$jason.default_dialingcode}}"
              },
              "success": {
                "type": "$render"
              }
            },
            "error": {
              "type": "$href",
              "options": {
                "url": "{{$global.jason_url}}/merchantapp_activation.json",
                "transition": "replace"
              }
            }
          }
        },
        "$foreground": {
          "type": "$reload"
        },
        "$pull": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "title": "Giffy Merchant",
            "style": {
              "size": "18"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "border": "none"
              },
              "components": [{
                "type": "image",
                "url": "{{$global.jason_url}}/giffy_circle_small.png",
                "style": {
                  "width": "100",
                  "height": "100"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Start",
                "style": {
                  "background": "#379ce9",
                  "color": "#ffffff",
                  "height": "80",
                  "size": "24"
                },
                "href": {
                  "url": "{{$global.jason_url}}/merchantapp_index.json",
                  "transition": "replace"
                }
              }]
            }]
          }]
        }
      }
    }
  }
}
