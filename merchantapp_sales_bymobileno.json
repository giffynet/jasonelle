{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Sales by Mobile No",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$render"
        },
        "$foreground": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#f3f3f3",
          "header": {
            "title": {
            "type": "image",
            "url": "https://giffynet.github.io/jasonelle/giffy_circle_small.png"
            },
            "style": {
              "background": "#BC845C"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "distribution": "equalspacing"
              },
              "components": [{
                "type": "space",
                "style": {
                "height": "20"
                }
              },{
                "type": "label",
                "text": "{{$params.programme_name}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "label",
                "text": "{{$params.currency}} {{$params.amount}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "label",
                "text": "Enter Customer's Mobile Number",
                "style": {
                  "size": "18"
                }
              },{
                "type": "label",
                "text": "Please include country and area code",
                "style": {
                  "size": "12"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "textfield",
                "name": "mobile_number",
                "placeholder": "e.g. +6221811198111",
                "keyboard": "phone",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Submit",
                "style": {
                  "background": "#d9d9d9",
                  "color": "#000000",
                  "height": "80",
                  "size": "24"
                },
                "action": {
                  "type": "$network.request",
                  "options": {
                    "url": "https://giffynet.github.io/jasonelle/sales.json",
                    "method": "get",
                    "header" : {
                      "Authorization": "Bearer {{$global.jwt_token}}",
                      "content_type": "json"
                    },
                    "data": {
                      "amount": "{{$params.amount}}",
                      "programme_id": "{{$params.programme_id}}",
                      "currency": "{{$params.currency}}",
                      "transaction_type": "sales",
                      "payload": "{{$get.mobile_number}}"
                    }
                  },
                  "success": {
                    "type": "href",
                    "options": {
                      "url": "https://giffynet.github.io/jasonelle/merchantapp_sales_result.json",
                      "transition": "replace",
                      "options": {
                        "transaction_datetime": "{{$jason.transaction_datetime}}"
                      }
                    }
                  },
                  "error": {
                    "type": "$util.toast",
                    "options": {
                      "text": "Transaction is not successful",
                      "type": "warning"
                    }
                  }
                }
              }]
            }]
          }],
          "footer": {
            "tabs": {
              "style": {
                "background": "rgba(255,255,255,0.8)",
                "color:disabled": "#cecece",
                "color": "#009efa"
              },
              "items": [{
                "text": "BY MOBILE NO",
                "style": {
                  "height": "21"
                },
                "href": {
                  "url": "https://giffynet.github.io/jasonelle/merchantapp_sales_bymobileno.json",
                  "transition": "replace",
                  "options": {
                    "amount": "{{$params.amount}}",
                    "programme_id": "{{$params.programme_id}}",
                    "programme_name": "{{$params.programme_name}}",
                    "currency": "{{$params.currency}}"
                  }
                }
              }, {
                "text": "BY QR CODE",
                "style": {
                  "height": "21"
                },
                "href": {
                  "url": "https://giffynet.github.io/jasonelle/merchantapp_sales_byqrcode.json",
                  "transition": "replace",
                  "options": {
                    "amount": "{{$params.amount}}",
                    "programme_id": "{{$params.programme_id}}",
                    "programme_name": "{{$params.programme_name}}",
                    "currency": "{{$params.currency}}"
                  }
                }
              }]
            }
          }
        }
      }
    }
  }
}
