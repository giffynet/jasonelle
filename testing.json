{
  "$jason": {
    "head": {
      "title": "Der Postillon",
      "description": "Opens tab if external link",
      "actions": {
        "$show": {
          "type": "$reload"
        },
        "global_debug" : {
          "type" : "$debug.on",
          "options" :
          {
            "class"  : "trace|debug|info|warning|error|fatal"
          }
        },
        "handleLink": [
          {
            "{{#if $jason.url.indexOf('facebook') != -1}}": {
              "type": "$href",
              "options": {
                "url": "{{$jason.url}}",
                "view": "web"
              }
            }
          },
          {
            "{{#elseif $jason.url.indexOf('addthis') != -1}}": {
              "type": "$href",
              "options": {
                "url": "{{$jason.url}}",
                "view": "web"
              }
            }
          },
          {
            "{{#else}}": {
              "type": "$default",
            }
          }
        ]
      }
    },
    "body": {
      "background": {
        "type": "html",
        "url": "https://www.der-postillon.com",
        "action": {
          "trigger": "handleLink"
        }
      }
    }
  }
}
