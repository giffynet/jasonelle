{
  "$jason": {
    "head": {
      "title": "Giffy Consumer - Set PIN",
      "description": "This app enable consumer to buy and use digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$render"
        }
      },
      "templates": {

    "body": {
      "background": "#ffffff",
      "sections": [{
        "items": [{
          "type": "vertical",
          "style": {
            "align": "center",
            "padding": "20",
            "border": "none"
          },
          "components": [{
            "type": "image",
            "url": "{{$global.jason_url}}/giffy_circle_small.png",
            "style": {
              "width": "100",
              "height": "100"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "label",
            "text": "Set PIN Code",
            "style": {
              "size": "18"
            }
          },{
            "type": "label",
            "text": "Please enter new PIN code .",
            "style": {
              "size": "12"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "textfield",
            "name": "pin1",
            "keyboard": "number",
            "secure": "true",
            "style": {
              "size": "18"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "label",
            "text": "Confirm PIN Code",
            "style": {
              "size": "18"
            }
          },{
            "type": "label",
            "text": "Please re-enter your PIN code .",
            "style": {
              "size": "12"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "textfield",
            "name": "pin2",
            "keyboard": "number",
            "secure": "true",
            "style": {
              "size": "18"
            }
          },{
            "type": "space",
            "style": {
              "height": "20"
            }
          },{
            "type": "button",
            "text": "Submit",
            "style": {
              "background": "#379ce9",
              "color": "#ffffff",
              "corner_radius": "10",
              "height": "50",
              "size": "20"
            },
            "action" : {
              "type": "$network.request",
              "options": {
                "url": "{{$global.jason_url}}/validate.json",
                "method": "get",
                "header" : {
                  "content_type": "json"
                },
                "data": {
                  "operation": "ismatched",
                  "value1": "{{$get.pin1}}",
                  "value2": "{{$get.pin2}}"
                }
              },
              "success": {
                "type": "$global.set",
                "options": {
                  "inapp_pin": "{{$get.pin1}}"
                },
                "success": {
                  "type": "$href",
                  "options": {
                    "url": "{{$global.jason_url}}/consumerapp_index.json",
                    "transition": "replace"
                  }
                }
              },
              "error": {
                "type": "$global.reset",
                "options": {
                  "items": ["inapp_pin"]
                },
                "success": {
                  "type": "$util.toast",
                  "options": {
                    "text": "Failed to verify your PIN. Please try again."
                  }
                }
              }
            }
          }]
        }]
      }]
    }

      }
    }
  }
}
