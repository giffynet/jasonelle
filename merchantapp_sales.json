{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Sales",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "https://giffynet.github.io/jasonelle/programme.json",
            "method": "get",
            "header" : {
              "Authorization" : "Bearer {{$global.jwt_token}}"
            }
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "background": "#f3f3f3",
          "header": {
            "title": {
              "type": "image",
              "url": "https://giffynet.github.io/jasonelle/giffy_circle.png"
            },
            "style": {
              "background": "#BC845C"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "30"
              },
              "components": {
                "{{#each $jason.programmes}}": {
                  "type": "label",
                  "text": "{{name}}",
                  "type": "label",
                  "text": "{{reloadable}}"
                }
              }
            }]
          }]
        }
      }
    }
  }
}
