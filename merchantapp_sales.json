{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Sales",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "icon": "{{$global.jason_url}}/giffy_circle_small.png",
      "offline": "true",
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "{{$global.jason_url}}/programme.json",
            "method": "get",
            "header" : {
              "Authorization" : "Bearer {{$global.jwt_token}}"
            }
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$util.toast",
            "options": {
              "type": "warning",
              "text": "Unable to  fetch programmes from server. Please check your internet connection."
            }
          }
        }
      },
      "templates": {
        "body": {
          "background": "#f3f3f3",
          "header": {
            "title": {
              "type": "image",
              "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#BC845C"
            },
            "search": {
              "name": "query_text",
              "placeholder": "Enter Keywords",
              "style": {
                "background": "#f3f3f3"
              }
            }
          },
          "sections": [{
            "items": {
              "{{#each $jason.programmes}}": {
                "type": "vertical",
                "style": {
                  "align": "center",
                  "padding": "20",
                  "distribution": "equalspacing"
                },
                "components": [{
                  "type": "label",
                  "text": "{{programme_name}}",
                  "style": {
                    "size": "18"
                  }
                },{
                  "type": "label",
                  "text": "Currency: {{currency}}, Reloadable: {{reloadable}}, Single Use: {{single_use}}, Valid for: {{validity_period}} days",
                  "style": {
                    "size": "12"
                  }
                },{
                  "type": "button",
                  "url": "{{image_url}}",
                  "href": {
                    "url": [
                      {
                        "{{#if initial_value>0}}": "{{$global.jason_url}}/merchantapp_sales_bymobileno.json"
                      },
                      {
                        "{{#else}}": "{{$global.jason_url}}/merchantapp_getamount.json"
                      }
                    ],
                    "transition": "push",
                    "options": {
                      "activity": "Sales - {{programme_name}}",
                      "amount": [
                        {
                          "{{#if initial_value>0}}": "{{initial_value}}"
                        },
                        {
                          "{{#else}}": ""
                        }
                      ],
                      "programme_id": "{{programme_id}}",
                      "programme_name": "{{programme_name}}",
                      "currency": "{{currency}}",
                      "next_url": "{{$global.jason_url}}/merchantapp_sales_bymobileno.json"
                    }
                  }
                }]
              }
            }
          }]
        }
      }
    }
  }
}
