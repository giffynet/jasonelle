{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Add Card By QR Code",
      "description": "This app enable consumer to buy and use digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "{{$global.jason_url}}/consumertoken.json",
            "method": "get",
            "head" : {
              "Authorization": "Bearer {{$global.jwt_token}}"
            },
            "data": {
              "card_id": "{{$params.card_id}}"
            }
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$util.toast",
            "options": {
              "type": "warning",
              "text": "Unable to  fetch consumer token from server. Please check your internet connection."
            }
          }
        },
        "$foreground": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#f3f3f3",
          "header": {
            "title": {
            "type": "image",
            "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#BC845C"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "distribution": "equalspacing"
              },
              "components": [{
                "type": "space",
                "style": {
                "height": "20"
                }
              },{
                "type": "label",
                "text": "Present this QR/Barcode for scanning",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "image",
                "url": "{{$jason.barcode_image_url}}",
                "style": {
                  "width": "300"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "image",
                "url": "{{$jason.qr_image_url}}",
                "style": {
                  "width": "300"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              }]
            }]
          }]
        }
      }
    }
  }
}
