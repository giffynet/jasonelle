{
  "$jason": {
    "head": {
      "title": "Giffy - Add Card By Promo Code",
      "description": "This app enable consumer to buy and use digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$render"
        },
        "$foreground": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "title": {
            "type": "image",
            "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#e98437"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "distribution": "equalspacing"
              },
              "components": [{
                "type": "space",
                "style": {
                "height": "20"
                }
              },{
                "type": "label",
                "text": "Enter Promo Code",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "textfield",
                "name": "promo_code",
                "placeholder": "e.g. FREE10DOLLARS",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Submit",
                "style": {
                  "background": "#379ce9",
                  "color": "#ffffff",
                  "corner_radius": "10",
                  "height": "50",
                  "size": "20"
                },
                "action": {
                  "type": "$network.request",
                  "options": {
                    "url": "{{$global.jason_url}}/promocode.json",
                    "method": "get",
                    "header" : {
                      "Authorization": "Bearer {{$global.jwt_token}}",
                      "content_type": "json"
                    },
                    "data": {
                      "promo_code": "{{$get.promo_code}}"
                    }
                  },
                  "success": {
                    "type": "$util.toast",
                    "options": {
                      "text": "Transaction is successful",
                      "type": "success"
                    }
                  },
                  "error": {
                    "type": "$util.toast",
                    "options": {
                      "text": "Transaction is not successful",
                      "type": "warning"
                    }
                  }
                }
              }]
            }]
          }]
        }
      }
    }
  }
}
