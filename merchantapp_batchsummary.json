{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Batch Summary",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "{{$global.jason_url}}/transactionsummary.json",
            "method": "get",
            "head" : {
              "Authorization": "Bearer {{$global.jwt_token}}"
            }
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$util.toast",
            "options": {
              "type": "warning",
              "text": "Unable to  fetch batch summary from server. Please check your internet connection."
            }
          }
        },
        "$foreground": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "title": {
            "type": "image",
            "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#e98437"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "distribution": "equalspacing"
              },
              "components": [{
                "type": "space",
                "style": {
                "height": "20"
                }
              },{
                "type": "label",
                "text": "Sales:",
                "style": {
                  "size": "24"
                }
              },{
                "type": "label",
                "text": "Topup:",
                "style": {
                  "size": "24"
                }
              },{
                "type": "label",
                "text": "Redeem:",
                "style": {
                  "size": "24"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Close Batch",
                "style": {
                  "background": "#379ce9",
                  "color": "#000000",
                  "height": "80",
                  "size": "24"
                },
                "action": {
                  "type": "$util.alert",
                  "options": {
                    "title": "Confirm to close batch?",
                    "description": "This  operation will close the current batch and open new one."
                  },
                  "success": {
                    "type": "$network.request",
                    "options": {
                      "url": "{{$global.jason_url}}/settlement.json",
                      "method": "get",
                      "head" : {
                        "Authorization": "Bearer {{$global.jwt_token}}"
                      }
                    },
                    "success": {
                      "type": "$reload"
                    },
                    "error": {
                      "type": "$util.toast",
                      "options": {
                        "type": "warning",
                        "text": "Unable to close batch. Please check your internet connection."
                      }
                    }
                  },
                  "error": {
                    "type": "$util.toast",
                    "options": {
                      "text": "Close batch is cancelled"
                    }
                  }
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Back",
                "style": {
                  "background": "#379ce9",
                  "color": "#000000",
                  "height": "80",
                  "size": "24"
                },
                "action": {
                  "type": "$back"
                }
              }]
            }]
          }]
        }
      }
    }
  }
}
