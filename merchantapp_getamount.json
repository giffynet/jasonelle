{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Get Amount",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "agents": {
        "validate": {
          "url": "https://giffynet.github.io/jasonelle/validate.html"
        }
      },
      "actions": {
        "invalidinput": {
          "type": "$util.toast",
          "options": {
            "text": "Invalid amount value"
          }
        }
        "$load": {
          "type": "$render"
        },
        "$foreground": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "title": {
            "type": "image",
            "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#e98437"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "distribution": "equalspacing"
              },
              "components": [{
                "type": "space",
                "style": {
                "height": "20"
                }
              },{
                "type": "label",
                "text": "{{$params.activity}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "label",
                "text": "Enter Amount in {{$params.currency}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "label",
                "text": "Please use decimal point to indicate cents, if applicable",
                "style": {
                  "size": "12"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "textfield",
                "name": "amount",
                "placeholder": "e.g. 1500.00",
                "keyboard": "number",
                "style": {
                  "size": "18"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "button",
                "text": "Next",
                "style": {
                  "background": "#379ce9",
                  "color": "#ffffff",
                  "height": "80",
                  "size": "24"
                },
                "action": {
                  "type": "$agent.request",
                  "options": {
                    "id": "validate",
                    "method": "val1",
                    "params": ["{{$get.amount}}", true]
                  },
                  "success": {
                    "type": "$href",
                    "options": {
                      "url": "{{$params.next_url}}",
                      "transition": "replace",
                      "options": {
                        "activity": "{{$params.activity}}",
                        "amount": "{{$get.amount}}",
                        "programme_id": "{{$params.programme_id}}",
                        "programme_name": "{{$params.programme_name}}",
                        "currency": "{{$params.currency}}"
                      }
                    }
                  },
                  "error": {
                    "type": "$util.toast",
                    "options": {
                      "text": "Invalid amount value"
                    }
                  }
                }
              }]
            }]
          }]
        }
      }
    }
  }
}
