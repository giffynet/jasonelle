{
  "$jason": {
    "head": {
      "title": "Giffy - Card Transaction History",
      "description": "This app enable consumer to buy and use digital gift card powered by Giffy",
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "{{$global.jason_url}}/cardtranshistory.json",
            "method": "get",
            "header" : {
              "Authorization" : "Bearer {{$global.jwt_token}}"
            },
            "data": {
              "card_id": "{{$params.card_id}}"
            }
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$util.toast",
            "options": {
              "type": "warning",
              "text": "Unable to  fetch transaction list from server. Please check your internet connection."
            }
          }
        },
        "$foreground": {
          "type": "$reload"
        },
        "$pull": {
          "type": "$reload"
        },
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "title": {
              "type": "image",
              "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#e98437"
            },
            "search": {
              "name": "query_text",
              "placeholder": "Enter Keywords",
              "style": {
                "background": "#f3f3f3"
              }
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "style": {
                "align": "center",
                "padding": "20",
                "distribution": "equalspacing"
              },
              "components": [{
                "type": "label",
                "text": "{{$jason.programme_name}} from {{$jason.issuer_name}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "label",
                "text": "Status: {{$jason.status_text}}, Currency: {{$jason.currency}}",
                "style": {
                  "size": "12"
                }
              },{
                "type": "image",
                "url": "{{$jason.image_url}}"
              },{
                "type": "label",
                "text": "Balance: {{$jason.total_balance}} - Valid until: {{$jason.expiry_date}}",
                "style": {
                  "size": "18"
                }
              },{
                "type": "label",
                "text": "[Basic: {{$jason.basic_balance}}, Bonus: {{$jason.bonus_balance}}]",
                "style": {
                  "size": "12"
                }
              },{
                "type": "space",
                "style": {
                  "height": "20"
                }
              },{
                "type": "horizontal",
                "components": [{
                  "type": "button",
                  "text": "My QR Code",
                  "style": {
                    "background": "#379ce9",
                    "color": "#ffffff",
                    "border_width": "5",
                    "border_color": "#ffffff",
                    "corner_radius": "10",
                    "height": "50",
                    "size": "20"
                  },
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "{{$global.jason_url}}/consumerapp_byqrcode.json",
                      "transition": "push",
                      "options": {
                        "card_id": "{{$params.card_id}}"
                      }
                    }
                  }
                },{
                  "type": "button",
                  "text": "PIN Code",
                  "style": {
                    "background": "#379ce9",
                    "color": "#ffffff",
                    "border_width": "5",
                    "border_color": "#ffffff",
                    "corner_radius": "10",
                    "height": "50",
                    "size": "20"
                  },
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "{{$global.jason_url}}/consumerapp_byqrcode.json",
                      "transition": "push",
                      "options": {
                        "card_id": "{{$params.card_id}}"
                      }
                    }
                  }
                }]
              }]
            }]
          },{
            "items": {
              "{{#each $jason.transactions}}": {
                "type": "vertical",
                "style": {
                  "align": "center",
                  "padding": "20",
                  "distribution": "equalspacing"
                },
                "components": [{
                  "type": "label",
                  "text": "{{transaction_datetime}}",
                  "style": {
                    "size": "12"
                  }
                },{
                  "type": "label",
                  "text": "{{transaction_type}} {{transaction_currency}} {{transaction_amount}}",
                  "style": {
                    "size": "18"
                  }
                },{
                  "type": "label",
                  "text": "[Basic: {{basic_amount}}, Bonus: {{bonus_amount}}]",
                  "style": {
                    "size": "18"
                  }
                },{
                  "type": "label",
                  "text": "{{outlet_name}}",
                  "style": {
                    "size": "12"
                  }
                }]
              }
            }
          }]
        }
      }
    }
  }
}
