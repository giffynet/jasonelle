{
  "$jason": {
    "head": {
      "title": "Giffy Merchant - Sales by QR Code",
      "description": "This app enable merchant to  accept digital gift card powered by Giffy",
      "templates": {
        "body": {
          "background": {
            "type": "camera",
            "options": {
              "device": "back"
            }
          },
          "header": {
            "title": {
            "type": "image",
            "url": "{{$global.jason_url}}/giffy_circle_small.png"
            },
            "style": {
              "background": "#e98437"
            }
          },
          "layers": [{
            "type": "label",
            "text": "Please SCAN QR Code / Barcode",
            "style": {
              "background": "rgba(0,0,0,0.1)",
              "bottom": "100",
              "left": "20",
              "color": "#FFFFFF",
              "size": "14",
              "align": "center"
            }
          }]
        }
      },
      "actions": {
        "$load": {
          "type": "$render"
        },
        "$foreground": {
          "type": "$reload"
        },
        "$show": {
          "type": "$reload"
        },
        "$vision.ready": {
          "type": "$vision.scan"
        },
        "$vision.onscan": {
          "type": "$util.alert",
          "options": {
            "title": "Do you want to continue?",
            "description": "Scan Content: {{$jason.content}}"
           },
          "success": {
            "type": "$util.toast",
            "options": {
              "text": "Transaction is successful"
            }
          },
          "error": {
            "type": "$timer.start",
            "options": {
              "interval": "1",
              "name": "timer1",
              "action": {
                "type": "$vision.scan"
              }
            }
          }
        }
      }
    }
  }
}
